{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run CSPBench",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "main.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "envFile": "${workspaceFolder}/.env",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "-v"
            ],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "envFile": "${workspaceFolder}/.env",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        },
        {
            "label": "Start Web Interface",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "main.py",
                "web"
            ],
            "group": "build",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "envFile": "${workspaceFolder}/.env",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "black",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        },
        {
            "label": "Lint Code",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "ruff",
                "check",
                "."
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        },
        {
            "label": "Setup Environment",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/pip",
            "args": [
                "install",
                "-r",
                "requirements.txt"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Clean Cache",
            "type": "shell",
            "command": "rm",
            "args": [
                "-rf",
                "__pycache__",
                "*.pyc",
                "*.pyo",
                "*/*.pyc",
                "*/*.pyo",
                "*/__pycache__",
                ".pytest_cache",
                ".coverage",
                "htmlcov",
                "logs",
                "outputs",
                "cache",
                "data"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Deploy Cloud Run",
            "type": "shell",
            "command": "bash",
            "args": [
                "deploy/cloud_run_deploy.sh",
                "--env-file",
                "deploy/.env.deploy"
                // Para preparar bucket na mesma execução, adicione: "--prepare-bucket"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "envFile": "${workspaceFolder}/deploy/.env",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        },
        {
            "label": "Clean Database",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "scripts/clean_database.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "envFile": "${workspaceFolder}/.env",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        },
        {
            "label": "Clean Database (Force)",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "scripts/clean_database_force.py"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}",
                "envFile": "${workspaceFolder}/.env",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}",
                    "PYTHONDONTWRITEBYTECODE": "1"
                }
            }
        }
    ]
}