{% block extra_js %}
<script>
function navigateToExecution(type) {
    if (type === 'results') {
        window.location.href = '/results';
        return;
    }
    if (type === 'generator') {
        window.location.href = '/datasets';
        return;
    }
    if (type === 'batch') {
        window.location.href = '/execution/batch';
        return;
    }
    window.location.href = `/execution/${type}`;
}

// Load stats on page load
document.addEventListener('DOMContentLoaded', async () => {
    try {
        // Load algorithm count
        const algorithmsResponse = await fetch('/api/algorithms');
        if (algorithmsResponse.ok) {
            const algorithms = await algorithmsResponse.json();
            document.getElementById('algorithm-count').textContent = algorithms.length;
        } else {
            document.getElementById('algorithm-count').textContent = '?';
        }
        
        // Load dataset count
        try {
            const datasetsResponse = await fetch('/api/datasets/saved');
            if (datasetsResponse.ok) {
                const datasets = await datasetsResponse.json();
                const count = datasets.saved_datasets ? datasets.saved_datasets.length : 0;
                document.getElementById('dataset-count').textContent = count;
            } else {
                document.getElementById('dataset-count').textContent = '?';
            }
        } catch (e) {
            document.getElementById('dataset-count').textContent = '5';
        }
        
    } catch (error) {
        console.error('Failed to load stats:', error);
        document.getElementById('algorithm-count').textContent = '?';
        document.getElementById('dataset-count').textContent = '?';
    }
});

// Add click handlers to both main cards and legacy cards
document.addEventListener('DOMContentLoaded', () => {
    // Handle main cards
    const mainCards = document.querySelectorAll('.main-card');
    mainCards.forEach(card => {
        card.addEventListener('click', (e) => {
            // Check if the click was on a button or link
            if (e.target.closest('button, a')) return;
            
            const type = card.dataset.type;
            if (type) {
                navigateToExecution(type);
            }
        });
    });
    
    // Handle legacy cards for compatibility
    const legacyCards = document.querySelectorAll('.card-hover');
    legacyCards.forEach(card => {
        card.addEventListener('click', (e) => {
            // Check if the click was on a button or link
            if (e.target.closest('button, a')) return;
            
            const type = card.dataset.type;
            if (type) {
                navigateToExecution(type);
            }
        });
    });
});
</script>
{% endblock %}
